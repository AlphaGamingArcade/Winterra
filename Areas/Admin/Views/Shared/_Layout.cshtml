                                <li><a href="#" class="gnb_2da@(Model.MenuIn == "ip_deny" ? " on" : "")">Blocked IPs</a></li>
                            </ul>
                        </div>
                    </div>
                </li>   *@
                <li class="gnb_li@(Model.MenuOut == 1 ? " on" : "")">
                    <button type="button" class="btn_op menu-200 menu-order-2" title="User Management">Account Management</button>
                    <div class="gnb_oparea_wr">
                        <div class="gnb_oparea">
                            <h3>Account Management</h3>
                            <ul>
                                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="gnb_2da@(Model.MenuIn == "user" ? " on" : "")">User</a></li>
                                <li><a asp-area="Admin" asp-controller="Home" asp-action="Administrator" class="gnb_2da@(Model.MenuIn == "administrator" ? " on" : "")">Administrator</a></li>
                            </ul>
                        </div>
                    </div>
                </li>

                <li class="gnb_li@(Model.MenuOut == 2 ? " on" : "")">
                    <button type="button" class="btn_op menu-300 menu-order-3" title="Content Management">Content Management</button>
                    <div class="gnb_oparea_wr">
                        <div class="gnb_oparea">
                            <h3>Content Management</h3>
                            <ul>
                                <li><a asp-area="Admin" asp-controller="Content" asp-action="Characters" class="gnb_2da@(Model.MenuIn == "characters" ? " on" : "")">Characters</a></li>
                                <li><a asp-area="Admin" asp-controller="Content" asp-action="Highlights" class="gnb_2da@(Model.MenuIn == "highlights" ? " on" : "")">Highlights</a></li>
