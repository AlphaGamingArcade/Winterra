                    <div class="gnb_oparea_wr">
                        <div class="gnb_oparea">
                            <h3>Settings</h3>
                            <ul>
                                <li><a href="#" class="gnb_2da@(Model.MenuIn == "setting" ? " on" : "")">General Settings</a></li>
                                <li><a href="#" class="gnb_2da@(Model.MenuIn == "banner" ? " on" : "")">Ad Banner Management</a></li>
