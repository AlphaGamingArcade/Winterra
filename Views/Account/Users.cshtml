@using Winterra.Models.ViewModels

<div class="container_wr" id="main-content">
    <section>
        <h2>@(Model.MenuTitle)</h2>
        <div class="tbl_head01 tbl_wrap">
            <table>
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Stellar</th>
                        <th scope="col">Is Online</th>
                        <th scope="col">Trophies</th>
                        <th scope="col">IP</th>
                        <th scope="col">Level</th>
                        <th scope="col">XP</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.UserAccountList != null)
                    {
                        var i = 1;
                        var j = 0;

                        @foreach (var p in Model.UserAccountList.Items)
                        {
                            <tr class="bg@(j%2)">
                                <td class="td_num">@p.Id</td>
                                <td class="td_id">@p.Name</td>
                                <td class="td_center">@p.Stellar</td>
                                <td class="td_center">@p.IsOnline</td>
                                <td class="td_center">@p.Trophies</td>
                                <td class="td_center">@p.Verified</td>
                                <td class="td_center">@p.Level</td>
                                <td class="td_center">@p.Xp</td>
                                <td class="td_mng td_mng_s"><a asp-controller="Account" asp-route-menuIn="@Model.MenuIn" asp-action="Edit" asp-route-id="@p.Id" class="btn btn_03">Edit</a></td>
                            </tr>

                            i++;
                            j++;
                        }
                    }
                </tbody>
            </table>
        </div>
        
            <ul class="pg_btn_list">
                @if(Model.UserAccountList != null){
                    <li class="pg_item">
                        <a class="pg_lnk @(Model.UserAccountList.HasPreviousPage ? "" : "disabled")" 
                        asp-route-pageNumber="@(Model.UserAccountList.PageNumber - 1)"
                        asp-route-pageSize="@Model.UserAccountList.PageSize">&laquo;</a>
                    </li>
                    @foreach (var pg in Model.UserAccountList.Pages)
                    {
                        <li class="pg_item">
                            <a class="pg_lnk @(Model.UserAccountList.PageNumber == pg ? "active" : "")"
                            asp-route-pageNumber="@pg"
                            asp-route-pageSize="@Model.UserAccountList.PageSize">@pg</a>
                        </li>
                    }
                    <li class="pg_item">
                        <a class="pg_lnk @(Model.UserAccountList.HasNextPage ? "" : "disabled")" 
                        asp-route-pageNumber="@(Model.UserAccountList.PageNumber + 1)"
                        asp-route-pageSize="@Model.UserAccountList.PageSize">&raquo;</a>
                    </li>
                }
            </ul>
    </section>
</div>