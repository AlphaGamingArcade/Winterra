@using Winterra.Models.ViewModels

<div class="container_wr" id="main-content">
    <section>
        <h2>@(Model.MenuTitle)</h2>
        <div class="tbl_head01 tbl_wrap">
            <table>
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Gems</th>
                        <th scope="col">Is Online</th>
                        <th scope="col">Trophies</th>
                        <th scope="col">IP</th>
                        <th scope="col">Level</th>
                        <th scope="col">XP</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.UserAccountList != null)
                    {
                        var i = 1;
                        var j = 0;

                        @foreach (var p in Model.UserAccountList)
                        {
                            <tr class="bg@(j%2)">
                                <td class="td_num">@i</td>
                                <td class="td_id">@p.Name</td>
                                <td class="td_center">@p.Gems</td>
                                <td class="td_center">@p.IsOnline</td>
                                <td class="td_center">@p.Trophies</td>
                                <td class="td_center">@p.Verified</td>
                                <td class="td_center">@p.Level</td>
                                <td class="td_center">@p.Xp</td>
                                <td class="td_mng td_mng_s"><a asp-controller="Account" asp-route-menuIn="@Model.MenuIn" asp-action="Edit" asp-route-id="@p.Id" class="btn btn_03">Edit</a></td>
                            </tr>

                            i++;
                            j++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <ul class="pg_btn_list">
            <li class="pg_item">
            <a class="pg_lnk" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
            </li>
            <li class="pg_item"><a class="pg_lnk active" href="#">1</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">2</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">3</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">4</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">5</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">6</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">7</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">8</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">9</a></li>
            <li class="pg_item"><a class="pg_lnk" href="#">10</a></li>
            <li class="pg_item">
            <a class="pg_lnk" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
            </li>
        </ul>
    </section>
</div>