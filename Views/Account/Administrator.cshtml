@using Winterra.Models.ViewModels

<div class="container_wr" id="main-content">
    <section>
        <h2>@(Model.MenuTitle)</h2>
        <div class="tbl_head01 tbl_wrap">
            <table>
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Gems</th>
                        <th scope="col">Is Online</th>
                        <th scope="col">Trophies</th>
                        <th scope="col">IP</th>
                        <th scope="col">Level</th>
                        <th scope="col">XP</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.AdminAccountList != null)
                    {
                        var i = 1;
                        var j = 0;

                        @foreach (var p in Model.AdminAccountList.Items)
                        {
                            <tr class="bg@(j%2)">
                                <td class="td_num">@i</td>
                                <td class="td_id">@p.Name</td>
                                <td class="td_center">@p.Gems</td>
                                <td class="td_center">@p.IsOnline</td>
                                <td class="td_center">@p.Trophies</td>
                                <td class="td_center">@p.Verified</td>
                                <td class="td_center">@p.Level</td>
                                <td class="td_center">@p.Xp</td>
                                <td class="td_mng td_mng_s"><a asp-controller="Account" asp-action="Edit" asp-route-menuIn="@Model.MenuIn" asp-route-id="@p.Id" class="btn btn_03">Edit</a></td>
                            </tr>

                            i++;
                            j++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <ul class="pg_btn_list">
            @if(Model.AdminAccountList != null){
                <li class="pg_item">
                    <a class="pg_lnk @(Model.AdminAccountList.HasPreviousPage ? "" : "disabled")" 
                    asp-route-pageNumber="@(Model.AdminAccountList.PageNumber - 1)"
                    asp-route-pageSize="@Model.AdminAccountList.PageSize">&laquo;</a>
                </li>
                @foreach (var pg in Model.AdminAccountList.Pages)
                {
                    <li class="pg_item">
                        <a class="pg_lnk @(Model.AdminAccountList.PageNumber == pg ? "active" : "")"
                        asp-route-pageNumber="@pg"
                        asp-route-pageSize="@Model.AdminAccountList.PageSize">@pg</a>
                    </li>
                }
                <li class="pg_item">
                    <a class="pg_lnk @(Model.AdminAccountList.HasNextPage ? "" : "disabled")" 
                    asp-route-pageNumber="@(Model.AdminAccountList.PageNumber + 1)"
                    asp-route-pageSize="@Model.AdminAccountList.PageSize">&raquo;</a>
                </li>
            }
        </ul>
    </section>
</div>