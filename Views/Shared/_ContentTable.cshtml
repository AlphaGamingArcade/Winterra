@using Winterra.Models.PartialModels

<section>
    <h2>@(Model.Title)(@(Model.ContentCount))</h2>
    <div class="tbl_head01 tbl_wrap">
        <table>
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Type</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if(Model.ContentList != null)
                {
                    var i = 1;
                    var j = 0;

                    @foreach (var p in Model.ContentList)
                    {
                        <tr class="bg@(j%2)">
                            <td class="td_num">@i</td>
                            <td class="td_id">@p.Type</td>
                            <td class="td_center">@p.Title</td>
                            <td class="td_center">@p.PublishedAt</td>
                            <td class="td_mng td_mng_s"><a asp-controller="Content" asp-action="Index" asp-route-id="@p.Id" class="btn btn_03">Edit</a></td>
                        </tr>
                        i++;
                        j++;
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="btn_list03 btn_list"><a href="customer_list.php">See All</a></div>
</section>